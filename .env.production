DEBUG=False
SECRET_KEY=your-super-secret-key-here
ALLOWED_HOSTS=your-domain.com,www.your-domain.com

# Database
DB_NAME=oifyk_production
DB_USER=oifyk_user
DB_PASSWORD=secure-password
DB_HOST=db
DB_PORT=5432

# Database Replica
DB_REPLICA_NAME=oifyk_production
DB_REPLICA_USER=oifyk_user
DB_REPLICA_PASSWORD=secure-password
DB_REPLICA_HOST=db_replica
DB_REPLICA_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# Email
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# File Storage
USE_S3=True
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=oifyk-media
AWS_S3_REGION_NAME=us-east-1

# Beds24
BEDS24_REFRESH_TOKEN=your-beds24-refresh-token

# Frontend
FRONTEND_URL=https://your-domain.com
CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com

# Security
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Monitoring
SENTRY_DSN=your-sentry-dsn

# Features
FEATURE_BEDS24=True
FEATURE_EMAIL=True
FEATURE_ANALYTICS=True
FEATURE_RATE_LIMITING=True