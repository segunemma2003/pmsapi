# .env.production - Clean template for VPS deployment
DEBUG=False
SECRET_KEY=your-super-secret-production-key
ALLOWED_HOSTS=api.oifyk.com

# Database
DB_NAME=oifyk_production
DB_USER=oifyk_user
DB_PASSWORD=secure-database-password
DB_HOST=db
DB_PORT=5432

# Redis
REDIS_URL=redis://redis:6379/0

# Email
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_HOST_USER=apikey
SENDGRID_API_KEY=your-sendgrid-api-key
DEFAULT_FROM_EMAIL=support@oifyk.com

# File Storage
USE_S3=False

# Frontend
FRONTEND_URL=https://oifyk.com
CORS_ALLOWED_ORIGINS=https://oifyk.com,https://www.oifyk.com,https://api.oifyk.com

# Security
SECURE_SSL_REDIRECT=True
SECURE_PROXY_SSL_HEADER=HTTP_X_FORWARDED_PROTO,https

# Features (use True/False, not true/false)
FEATURE_BEDS24=True
FEATURE_EMAIL=True
FEATURE_ANALYTICS=True
FEATURE_RATE_LIMITING=True

# Beds24 API (optional)
BEDS24_REFRESH_TOKEN=

OPENAI_API_KEY=

GOOGLE_MAPS_API_KEY=

SPACY_MODEL=en_core_web_sm
TRANSFORMERS_CACHE=./models
